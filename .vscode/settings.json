{
    "go.useLanguageServer": true,
    "go.testFlags": [
        "-v",
        "-count=1"
    ],
    "go.coverOnSave": false,
    "go.coverOnSingleTest": true,
    "go.lintTool": "golint",
    "go.toolsManagement.autoUpdate": true,
    "go.delveConfig": {
        "useApiV1": false,
        "dlvLoadConfig": {
            "followPointers": true,
            "maxVariableRecurse": 3,
            "maxStringLen": 400,
            "maxArrayValues": 400,
            "maxStructFields": -1
        }
    }
}